<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pontoeletronico.FormFolhaDePontoController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>

    <Label text="ID do Funcionário:" />
    <HBox spacing="10">
        <TextField fx:id="txtFuncionarioId" />
        <Button onAction="#onBtBuscarFuncionarioAction" text="Buscar" />
    </HBox>

    <Label text="Nome do Funcionário:" />
    <TextField fx:id="txtNomeFuncionario" />

    <Label text="Data:" />
    <TextField fx:id="txtData" editable="false"/>

    <Label text="Hora de Entrada:" />
    <TextField fx:id="txtHoraEntrada" editable="false"/>

    <Label text="Hora de Saída:" />
    <TextField fx:id="txtHoraSaida" editable="false"/>

    <Label text="Hora do Intervalo - Início:" />
    <TextField fx:id="txtIntervaloInicio" editable="false"/>

    <Label text="Hora do Intervalo - Fim:" />
    <TextField fx:id="txtIntervaloFim" editable="false"/>

    <Button onAction="#onRegistrar" text="Registrar" />
</VBox>
