<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane alignment="CENTER" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pontoeletronico.FormFolhaDePontoController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10"/>
    </padding>

    <Label text="ID do Funcionário:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="txtFuncionarioId" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
    <Button onAction="#onBtBuscarFuncionarioAction" text="Buscar" GridPane.columnIndex="2" GridPane.rowIndex="0"/>

    <Label text="Nome do Funcionário:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="txtNomeFuncionario" GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.columnSpan="2"/>

    <Label text="Hora de Entrada:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="txtHoraEntrada" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.columnSpan="2"/>

    <Label text="Hora de Saída:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="txtHoraSaida" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.columnSpan="2"/>

    <Label text="Hora do Intervalo - Início:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField fx:id="txtIntervaloInicio" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="4" GridPane.columnSpan="2"/>

    <Label text="Hora do Intervalo - Fim:" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
    <TextField fx:id="txtIntervaloFim" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="5" GridPane.columnSpan="2"/>

    <Button onAction="#onRegistrar" text="Registrar" GridPane.columnIndex="1" GridPane.rowIndex="6" GridPane.columnSpan="2"/>
</GridPane>
