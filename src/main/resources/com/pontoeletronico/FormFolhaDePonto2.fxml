<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pontoeletronico.FormFolhaDePontoController">
    <children>
        <HBox spacing="10">
            <children>
                <TextField fx:id="txtFuncionarioId" promptText="ID do Funcionário" />
                <Button fx:id="btBuscar" onAction="#onBuscarFuncionario" text="Buscar" />
            </children>
        </HBox>
        <Label fx:id="labelFuncionario" text="Funcionário:" />
        <TableView fx:id="tableViewPontos">
            <columns>
                <TableColumn fx:id="colData" text="Data" />
                <TableColumn fx:id="colHoraEntrada" text="Hora Entrada" />
                <TableColumn fx:id="colHoraSaidaIntervalo" text="Hora Saída Intervalo" />
                <TableColumn fx:id="colHoraEntradaIntervalo" text="Hora Entrada Intervalo" />
                <TableColumn fx:id="colHoraSaida" text="Hora Saída" />
            </columns>
        </TableView>
        <HBox spacing="10">
            <children>
                <Button fx:id="btRegistrar" onAction="#onRegistrar" text="Registrar" />
                <Button text="Cancelar" />
            </children>
            <HBox.margin>
                <Insets top="10" />
            </HBox.margin>
        </HBox>
    </children>
</VBox>
