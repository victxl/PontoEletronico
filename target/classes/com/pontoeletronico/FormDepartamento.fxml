<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pontoeletronico.FormDepartamentoController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>

    <Label text="Departamento ID:" />
    <TextField fx:id="txtId" disable="true" />

    <Label text="Nome do Departamento:" />
    <TextField fx:id="txtNome" />

    <HBox spacing="10">
        <Button onAction="#onBtSaveAction" text="Salvar" />
        <Button onAction="#onBtCancelAction" text="Cancelar" />
    </HBox>
</VBox>
