<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pontoeletronico.FormFolhaDePontoController">
    <children>
        <HBox spacing="10">
            <children>
                <TextField fx:id="txtFuncionarioId" promptText="ID do Funcionário" />
                <Button onAction="#onBuscar" text="Buscar" />
            </children>
        </HBox>
        <Label fx:id="lblFuncionario" />
        <TableView fx:id="tableViewFolhaDePonto">
            <columns>
                <TableColumn fx:id="tableColumnData" text="Data" />
                <TableColumn fx:id="tableColumnHoraEntrada" text="Hora Entrada" />
                <TableColumn fx:id="tableColumnHoraSaidaIntervalo" text="Hora Saída Intervalo" />
                <TableColumn fx:id="tableColumnHoraEntradaIntervalo" text="Hora Entrada Intervalo" />
                <TableColumn fx:id="tableColumnHoraSaida" text="Hora Saída" />
            </columns>
        </TableView>
        <HBox spacing="10">
            <children>
                <Button onAction="#onRegistrar" text="Registrar" />
                <Button text="Cancelar" />
            </children>
        </HBox>
    </children>
    <VBox.margin>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </VBox.margin>
</VBox>
